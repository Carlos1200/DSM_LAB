<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20sp"
    android:layout_marginTop="10sp"
    tools:context=".SecondFragment">


    <TextView
        android:id="@+id/LlbNombreEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre" />
    <EditText
        android:id="@+id/TxtNombreEmpleado"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:inputType="text"/>
    <TextView
        android:id="@+id/LlbSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/salario" />
    <EditText
        android:id="@+id/TxtSalario"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/BtnEnviarSalario"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:textAllCaps= "false"
        android:text="@string/enviar" />
    <TextView
        android:id="@+id/LlbResultadoSalario"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:text="@string/resultado"
        android:textAlignment="center"
        android:textSize="25dp"
        />
    <ListView
        android:id="@+id/ListaEmpleados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:scrollbars="vertical" />

</LinearLayout>